<!doctype html>
html(lang="es")
  head
    
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    
    link(href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet")
    
    title Polimetal S.A
    link(rel="stylesheet" href="/stylesheets/styleIndex.css")
  body
   
    div(class="d-flex")
        div(id="sidebar-container" class="bg-primary")
            div(class="logo")
                img(src="favicon.ico" alt="" class="d-inline-block")
                h4(class="text-light font-weight-bold d-inline-block") Polimetal S.A
            div(class="menu")
                a(href="/" class="d-block p-1 text-light"     )
                    i(class="icon ion-md-home m-2 lead") Inicio
                a(href="/" class="d-block p-1 text-light" )
                    i(class="icon ion-md-home m-2 lead") Plan de Accion
                hr
                h6(class="p-3 text-light") Sectores
                a(href="#" class="d-block p-1 text-light") Inyeccion
                a(href="#" class="d-block p-1 text-light") TT & CC
                a(href="#" class="d-block p-1 text-light") Mecanizado
                a(href="#" class="d-block p-1 text-light") Ventilado 
                a(href="#" class="d-block p-1 text-light") Pintura
                
                
                ul(class="logout")
                    li  
                        div(style="text-align: center")
                            img(src="images/usuario.png", alt="" width="50px")
                        p(class="d-block p-3 text-light")= nombre
                        a(href="/logout" class="d-block p-3 text-light" )
                            i(class="icon ion-md-log-in m-2 lead" )="    Logout"
               
                        
                
        
        div(class="w-100")
            div(class="container")
                <nav class="navbar navbar-light bg-light">
                    <div class="container-fluid">
                        h3(class="navbar-brand") Reunion de respuesta rapida
                        <form class="d-flex">
                            
                            <button class="btn btn-outline-success" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">+ Agregar Datos</button>
                        </form>
                    </div>
                </nav>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                            <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Carga de Datos</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                
                                <form class="d-flex">                               
                                            <label class="form-label"> Fecha
                                            <input type="date", name="fecha" class="form-control">
                                        
                                            <label class="form-label"> Sector
                                            <select type="text", name="sector" class="form-select">
                                                <option>Inyeccion</option>
                                                <option>TT&CC</option>
                                                <option>Mecanizado</option>
                                                <option>Cosmetica</option>
                                                <option>Pintura</option>
                                            </select>
                                            <label class="form-label"> Accidentes
                                            <input type="number", name="fecha" class="form-control">
                                            <label class="form-label"> %Cumpimiento de Programa
                                            <input type="number", name="fecha" class="form-control">
                                            <label class="form-label"> %Retrabajo
                                            <input type="number", name="fecha" class="form-control">
                                            <label class="form-label"> %Scrap
                                            <input type="number", name="fecha" class="form-control">
                                            <label class="form-label"> %Disponibilidad
                                            <input type="number", name="fecha" class="form-control">
                                            <label class="form-label"> %Cump. Programa
                                            <input type="number", name="fecha" class="form-control">
                                            <label class="form-label"> %Cump. Programa
                                            <input type="number", name="fecha" class="form-control">

                                </form>                            
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                            </div>
                    </div>
                </div>



    

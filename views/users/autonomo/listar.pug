                        p(style="text-align:center; font-weight:bold")=cerradoAzul
                    div(class="col-2 p-2 m-2" style="border:solid;border-radius:5%;border-color:red")
                        P Rojas Pendientes 
                        p(style="text-align:center; font-weight:bold")=pendRojo
                    div(class="col-2 p-2 m-2" style="border:solid;border-radius:5%;border-color:red")

                                td= i.ejecutor
                                td= i.acciones
                                td= i.duracion
                                td
                                    if (nombre==i.detecto)  
                                        
                                        form(action="eliminarTarjeta?_method=DELETE", method="post" id="formDelete")
                                            a(href="editarTarjeta?sector="+sector+"&id="+i.id class="d-inline-block")
                                                h4(class="editIcon")
                                                    i(class='bx bxs-edit')
                                            input(type="hidden", name="id" value=i.id)
                                            input(type="hidden", name="sector" vaulue=i.sector)
                                            button( type="button" onclick="confirmar()")   
                                                    h4(class="editIcon")
                                                        i(class='bx bxs-x-circle' style='color:#f50505')
                                    a(href="resolverTarjeta?sector="+sector+"&id="+i.id  class="d-inline-block")
                                        h4  
                                            i(class='bx bxs-check-square' style='color:#32b120' )
            br
            hr
            hr
            br
            h2(style="color:red") Tarjetas Rojas                    
            div(class="table-responsive")
                table(class="table  table-hover" style="text-align:center" id="t2")
                    thead(style="background-color:#B92319;color:white")  
                        th Id 
                        th Estado
                        th Fecha 
                        th Detecto 
                        th Equipo 
                        th Prioridad 
                        th Disposicion 
                        th Descripcion 
                        th Fecha de cierre 
                        th Ejecutor 
                        th Acciones 
                        th Duracion
                        th Acciones 
                    tbody
                        each i in rojo 
                            tr 
                                td= i.id
                                td(class=i.estado)= i.estado
                                td= i.fecha
                                td= i.detecto
                                td= i.equipo
                                td= i.prioridad
                                td= i.disposicion
                                td= i.descripcion
                                td= i.fecha_cierre
                                td= i.ejecutor
                                td= i.acciones
                                td= i.duracion
                                td
                                    if (nombre==i.detecto)  
                                        
                                        form(action="eliminarTarjeta?_method=DELETE", method="post" id="formDelete")
                                            a(href="editarTarjeta?sector="+sector+"&id="+i.id class="d-inline-block")
                                                h4(class="editIcon")
                                                    i(class='bx bxs-edit')
                                            input(type="hidden", name="id" value=i.id)
                                            input(type="hidden", name="sector" vaulue=i.sector)
                                            button( type="button" onclick="confirmar()")   
                                                    h4(class="editIcon")
                                                        i(class='bx bxs-x-circle' style='color:#f50505')
                                    a(href="resolverTarjeta?sector="+sector+"&id="+i.id  class="d-inline-block")
                                        h4  

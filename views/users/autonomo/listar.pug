                        p(style="text-align:center; font-weight:bold")=cerradoRojo
                div( class="chartAM") 
                    canvas(id="myChart")
                    
            hr
            br
            h2 Tarjetas Azules
            
            div(class="table-responsive")
                table(class="table table-hover" style="text-align:center" id="t1")
                    thead(style="background-color:#094A81;color:white")  
                        th Id 
                        th Estado
                        th Fecha 
                        th Detecto 
                        th Equipo 
                        th Prioridad 
                        th Disposicion 
                        th Descripcion 
                        th Fecha de cierre 
                        th Ejecutor 
                        th Acciones 
                        th Duracion 
                        th Acciones
                    tbody
                        each i in azul 
                            tr 
                                td= i.id
                                td= i.estado
                                td= i.fecha
                                td= i.detecto
                                td= i.equipo
                                td= i.prioridad
                                td= i.disposicion
                                td= i.descripcion

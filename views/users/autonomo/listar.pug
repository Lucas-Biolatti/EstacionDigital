        div(class="w-100")
            .container
                div
                    h2(id="sector")= sector

                div(class="row")
                    a(href="autonomo", style="display: inline")
                        h1 
                            i(class='bx bx-arrow-back bx-tada bx-flip-vertical')
                    div(class="col-2 p-2 m-2" style="border:solid;border-radius:5%;border-color:blue")

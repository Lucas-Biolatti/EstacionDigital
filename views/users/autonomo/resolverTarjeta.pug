                a(href="/users/mtto" class="d-block p-3 text-light")
                    i(class="icon ion-md-construct m-2 lead") Mantenimiento
                a(href="/users/syso" class="d-block p-3 text-light")
                    i(class="icon ion-md-warning m-2 lead") Higiene y Seguridad
                a(href="/users/autonomo" class="d-block p-3 text-light" id="selected")
                    i(class="icon ion-md-walk m-2 lead") Mtto Autonomo
                
                
                ul(class="logout")
                    li  
                        div(style="text-align: center")
                            img(src="/images/usuario.png", alt="" width="50px")
                        p(class="d-block p-3 text-light")= nombre
                        a(href="/logout" class="d-block p-3 text-light" )
                            i(class="icon ion-md-log-in m-2 lead" )="    Logout"
                        
                
        
        div(class="w-100")
            div(class="container")
                div(style="text-align: center; width:auto;heigh:auto;padding-top:5rem")
                    img(src="logo.jpg" alt="")
                h2(style="text-align:center")
                    i(class='bx bx-plus-medical bx-sm')= "Resolver Tarjeta N°"+result[0].id
                h2(id="sector")=result[0].sector
                h3 Identificación    
                hr
                div.card.shadow-sm.mb-4
                    div.card-body
                        h5.card-title.mb-3 Detalles de la Tarjeta

                        div.row
                            .col-md-6.mb-2
                                strong Fecha: 
                                |  #{f}
                            .col-md-6.mb-2
                                strong Tipo: 
                                |  #{result[0].tipo}

                            .col-md-6.mb-2
                                strong Detectó: 
                                |  #{result[0].detecto}
                            .col-md-6.mb-2
                                strong Equipo: 
                                |  #{result[0].equipo}

                            .col-md-6.mb-2
                                strong Prioridad: 
                                |  #{result[0].prioridad}
                            .col-md-6.mb-2
                                strong Disposición: 
                                |  #{result[0].disposicion}

                            .col-12.mt-3
                                strong Descripción:
                                p.mb-0 #{result[0].descripcion}
                hr
                h3 Cierre de tarjeta
                form(action="resolverTarjeta", method="post" enctype="multipart/form-data") 
                    .row 
                        .col-sm-3
                            input(type="hidden", name="id" value=result[0].id)
                            input(type="hidden", name="sector" value=result[0].sector) 
                            label(for="fecha" class="form-label") Fecha de cierre
                            input(type="date", name="fecha" id="fecha" class="form-control" required )
                        .col-sm-3 
                            label(for="tipo" class="form-label") Ejecutor
                            input#ejecutor(type="text", name="ejecutor" class="form-control" required)
                        .col-sm-3
                            label(for="acciones" class="form-label") Acciones
                            textarea(class="form-control" id="acciones" name="acciones" required)
                        .col-sm-3
                            label(for="duracion" class="form-label") Duracion (min)
                            input#duracion(type="number", name="duracion")
                    br
                    
                    .row
                        
                        .col-sm-6 
                            if result[0].foto
                                p Imagen actual:
                                a(href="/"+result[0].foto target="_blank")
                                    img(src="/"+result[0].foto alt="Imagen actual" width="200px" height="200px")
                                input(type="hidden", name="fotoActual", value=result[0].foto)
                        .col-sm-6 
                            label(for="fotoDespues" class="form-label") Imagen de lo detectado 
                            input#fotoDespues(type="file", name="fotoDespues", class="form-control" )
                    br
                    div(class="d-grid gap-2 col-6 mx-auto mt-3 mb-5")
                        button(class="btn btn-success" type="submit") Modificar

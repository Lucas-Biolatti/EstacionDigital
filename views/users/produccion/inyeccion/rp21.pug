              // Sumar valores
              acc[gima].golpes += golpes;
              acc[gima].rx += rx;
              acc[gima].isla += isla;
              acc[gima].ok += ok;
              acc[gima].scrap = ((acc[gima].rx + acc[gima].isla) / acc[gima].golpes) * 100;

              return acc;
            }, {});


            const agrupadoPorGima = datos.reduce((acc, item) => {
              const { gima, golpes, rx, isla, ok } = item;

              if (!acc[gima]) {
                acc[gima] = {
                  gima,
                  golpes: 0,
                  rx: 0,
                  isla: 0,
                  ok: 0,
                  scrap: 0
                };

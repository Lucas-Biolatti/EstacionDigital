            let t3 = document.getElementById('table3');
            let t4 = document.getElementById('table4');
            let t5 = document.getElementById('table5');
            //Vaciar Tablas
            t1.innerHTML = "";
            t2.innerHTML = "";
            t3.innerHTML = "";
            t4.innerHTML = "";
            t5.innerHTML = "";

            datos.forEach(dato => {
              if (dato.turno === 'MAÑANA') {
                mañana++;
                gm+=Number(dato.golpes);
                om+=Number(dato.ok);
                if(dato.ok>68){
                  t1.innerHTML+=`
                <tr>
                  <td>${dato.id}</td>
                  <td>${dato.gima}</td>
                  <td>${dato.Control_1}</td>

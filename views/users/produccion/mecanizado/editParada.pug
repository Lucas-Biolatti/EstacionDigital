        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                 
                 
            <h5 class="modal-title" id="addDataModalLabel">Editar Parada</h5>
                
            
            <form id="turnoForm" method="POST" action="parada_mecanizado">
                <div class="common-section">
                <h3>Nueva parada de maquina</h3>
                <div class="mb-3">
                    <label for="fecha_p" class="form-label">Fecha</label>
                    input(type="date" class="form-control" id="fecha_p" name="fecha_p" required value=result[0].fecha)
                </div>
                <div class="mb-3">
                    <label for="turno_p" class="form-label">Turno</label>
                    <select class="form-select" id="turno_p" name="turno_p" required>
                    option(value=result[0].turno)=result[0].turno
                    <option value="MAÑANA">Mañana</option>
                    <option value="TARDE">Tarde</option>
                    <option value="NOCHE">Noche</option>
                    </select>
                
                <div class="mb-3">
                <label for="maquina_p" class="form-label">Seleccionar Máquinas</label>
                select#maquina_p(name="maquina_p" class="form-select")
                    option(value=result[0].maquina)=result[0].maquina
                    option(value="") -
                    option(value="Isla 1") Isla 1
                    option(value="Isla 3") Isla 3
                    option(value="Isla 6") Isla 6
                    option(value="Isla 7") Isla 7
                    option(value="Isla 8") Isla 8
                    option(value="Isla 9") Isla 9
                    option(value="Isla 10") Isla 10
                    option(value="Isla 11") Isla 11
                
                </div>
                h5 Detalles de la parada
                <div class="mb-3">
                <label for="desde" class="form-label">Desde</label>
                input(type="datetime-local", name="desde", id="desde" class="form-control" value=result[0].desde)
                </div>
                <div class="mb-3">
                <label for="hasta" class="form-label">Hasta</label>
                input(type="datetime-local", name="hasta", id="hasta" class="form-control" value=result[0].hasta)
                </div>
                <div class="mb-3">
                <label for="" class="form-label">Descripcion</label>
                select(name="descripcion" class="form-select" id="descripcion" value=result[0].descripcion)
                </div>
                <div class="mb-3">
                <label for="" class="form-label">Subdescripcion</label>
                select(name="subdescripcion" class="form-select" id="subdescripcion" value=result[0].subdescripcion)
                </div>
                <div class="mb-3">
                <label for="tiempo" class="form-label">Tiempo</label>
                input(type="number", name="tiempo", id="tiempo" class="form-control" value=result[0].tiempo)
                </div>
                input(type="hidden", name="id_regProd" value=result[0].idRegProd)
                <div class="mb-3">
                <label for="obs" class="form-label">Observaciones</label>
                textarea(name="obs" class="form-control" id="obs")=value=result[0].obs
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
                
             

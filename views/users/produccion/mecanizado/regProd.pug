    script.
      feather.replace({ 'aria-hidden': 'true' });
      //Esconder o mostrar Secciones.
      document.getElementById("toggleTableButton").addEventListener("click", function() {
          var tableContainer = document.getElementById("tableContainer");
          var icon = document.getElementById("toggleIcon");

          if (tableContainer.style.display === "none") {
              tableContainer.style.display = "block"; // Mostrar el container
              icon.setAttribute("data-feather", "chevron-down"); // Cambiar icono
          } else {
              tableContainer.style.display = "none"; // Ocultar el container
              icon.setAttribute("data-feather", "chevron-right"); // Cambiar icono
          }
          feather.replace(); // Refrescar los íconos
      });
      document.getElementById("toggleTableButton2").addEventListener("click", function() {
          var tableContainer = document.getElementById("tableContainer2");
          var icon = document.getElementById("toggleIcon2");

          if (tableContainer.style.display === "none") {
              tableContainer.style.display = "block"; // Mostrar el container
              icon.setAttribute("data-feather", "chevron-down"); // Cambiar icono
          } else {
              tableContainer.style.display = "none"; // Ocultar el container
              icon.setAttribute("data-feather", "chevron-right"); // Cambiar icono
          }
          feather.replace(); // Refrescar los íconos
      });
      document.getElementById("toggleTableButton3").addEventListener("click", function() {
          var tableContainer = document.getElementById("tableContainer3");
          var icon = document.getElementById("toggleIcon3");

          if (tableContainer.style.display === "none") {
              tableContainer.style.display = "block"; // Mostrar el container
              icon.setAttribute("data-feather", "chevron-down"); // Cambiar icono
          } else {
              tableContainer.style.display = "none"; // Ocultar el container
              icon.setAttribute("data-feather", "chevron-right"); // Cambiar icono
          }
          feather.replace(); // Refrescar los íconos
      });
      document.addEventListener('DOMContentLoaded', () => {
          const dateInput = document.getElementById('fini');
          const now = new Date();

          // Verifica si la hora actual está entre las 00:00 y las 06:00
          if (now.getHours() < 6) {
              // Resta un día para mostrar la fecha anterior
              now.setDate(now.getDate() - 1);
          }

          // Formatea la fecha en formato YYYY-MM-DD
          const formattedDate = now.toISOString().split('T')[0];

          // Establece la fecha en el input
          dateInput.value = formattedDate;
      });
      
      let programadasInput = document.getElementById('programadas');
      let prog = document.getElementById('maquina');
      prog.addEventListener('change', (e) => {
          const valorSeleccionado = e.target.value;

          // Mapeo de valores
          const valores = {
              'Isla 1': 28,
              'Isla 3': 42,
              'Isla 6': 42,
              'Isla 7': 30,
              'Isla 8': 42,
              'Isla 9': 42,
              'Isla 10': 30,
              'Isla 11': 42,
          };

          // Asignar valor al input si existe en el mapeo
          programadasInput.value = valores[valorSeleccionado] || '';
      });
      //Carga de modelos
      fetch('/users/modelos')
      .then(response => response.json())
      .then(datos => {
          const selectModelo = document.getElementById('modelo'); // Referencia al select con id "modelo"
          
          // Limpiar el select antes de llenarlo (opcional si no tiene contenido inicial)
          selectModelo.innerHTML = '';

          // Iterar sobre los datos y agregar opciones al select
          datos.forEach(dato => {
              if (dato.modelo) { // Verificar que el dato tenga la clave "modelo"
                  const option = document.createElement('option');
                  option.value = dato.modelo; // Valor de la opción
                  option.textContent = dato.modelo; // Texto visible de la opción
                  selectModelo.appendChild(option);
              }
          });
      })
      .catch(error => console.error('Error al obtener los modelos:', error));
      //Carga de molde
      const modeloSelect = document.getElementById('modelo');
      const kitSelect = document.getElementById('kit');
      const moldeInput = document.getElementById('molde');

      // Función para actualizar el valor del input "molde"
      function actualizarMolde() {
          const modelo = modeloSelect.value;
          const kit = kitSelect.value;
          moldeInput.value = `${modelo} ${kit}`; // Concatenar los valores
      }

      // Escuchar el evento "change" en ambos selects
      modeloSelect.addEventListener('change', actualizarMolde);
      kitSelect.addEventListener('change', actualizarMolde);


      document.addEventListener('DOMContentLoaded', () => {
        const dateInput = document.getElementById('fini');
        const cons = document.getElementById('consultar');
        const now = new Date();

        if (now.getHours() < 6) {
            now.setDate(now.getDate() - 1);
        }

        const formattedDate = now.toISOString().split('T')[0];
        dateInput.value = formattedDate;

        const fetchData = () => {
            const fecha = dateInput.value;
            fetch(`reg_prod_fecha?fecha=${fecha}`)
                .then(response => response.json())
                .then(datos => {
                    console.log(datos);
                    let mañana = 0;
                    let tarde = 0;
                    let noche = 0;
                    //aprobadas
                    let gm = 0;
                    let gt = 0;
                    let gn = 0;
                    //programadas
                    let om = 0;
                    let ot = 0;
                    let on = 0;
                    //Scrap
                    let sm = 0;
                    let st = 0;
                    let sn = 0;
                    const t1 = document.getElementById('table1');
                    const t2 = document.getElementById('table2');
                    const t3 = document.getElementById('table3');

                    t1.innerHTML = "";
                    t2.innerHTML = "";
                    t3.innerHTML = "";

                    datos.forEach(dato => {
                        feather.replace({ 'aria-hidden': 'true' });
                        let targetTable = null;

                        if (dato.turno === 'MAÑANA') {
                            mañana++;
                            gm+=Number(dato.ap);
                            om+=Number(dato.prog);
                            sm+=Number(dato.scrap);
                            targetTable = t1;
                        } else if (dato.turno === 'TARDE') {
                            tarde++;
                            gt+=Number(dato.ap);
                            ot+=Number(dato.prog);
                            st+=Number(dato.scrap);
                            targetTable = t2;
                        } else if (dato.turno === 'NOCHE') {
                            noche++;
                            gn+=Number(dato.ap);
                            on+=Number(dato.prog);
                            sn+=Number(dato.scrap);
                            targetTable = t3;
                        }

                        if (targetTable) {
                            targetTable.innerHTML += `
                                <tr>
                                    <td>${dato.id}</td>
                                    <td>${dato.maquina}</td>
                                    <td>${dato.molde}</td>
                                    <td>${dato.molde2}</td>
                                    <td>${dato.molde3}</td>
                                    <td>${dato.molde4}</td>
                                    <td>${dato.ap}</td>
                                    <td>${dato.prog}</td>
                                    <td>${dato.intermedia}</td>
                                    <td>${dato.scrap}</td>
                                    <td>${((dato.scrap/(dato.scrap+dato.ap))*100).toFixed(2)}%</td>
                                    <td>${dato.tp}</td>
                                    <td>${dato.observaciones}</td>
                                    <td>
                                        <a href="editRegistro?id=${dato.id}&maquina=${dato.maquina}" class="btn btn-sm btn-primary">
                                            <i data-feather="edit"></i>
                                        </a>
                                        <a href="eliminarDato?id=${dato.id}" class="btn btn-sm btn-danger eliminar-dato" data-id="${dato.id}">
                                            <i data-feather="trash-2"></i>
                                        </a>
                                    </td>
                                </tr>
                            `;
                        }
                        //Maquinas
                        let m = document.getElementById('m')
                        let t = document.getElementById('t')
                        let n = document.getElementById('n')

                        m.innerHTML = `Maquinas: <strong>${mañana}</strong>`;
                        t.innerHTML = `Maquinas: <strong>${tarde}</strong>`;
                        n.innerHTML = `Maquinas: <strong>${noche}</strong>`;
                        //Golpes
                        document.getElementById('gm').innerHTML = `Total Aprobadas: <strong>${gm}</strong>`;
                        document.getElementById('gt').innerHTML = `Total Aprobadas: <strong>${gt}</strong>`;
                        document.getElementById('gn').innerHTML = `Total Aprobadas: <strong>${gn}</strong>`
                        //OK
                        document.getElementById('om').innerHTML = `Total Programado: <strong>${om}</strong>`;
                        document.getElementById('ot').innerHTML = `Total Programado: <strong>${ot}</strong>`;
                        document.getElementById('on').innerHTML = `Total Programado:| <strong>${on}</strong>`;
                        //Scrap

                        document.getElementById('sm').innerHTML = `Scrap: 1,5% | <strong>${((sm/(gm+sm))*100).toFixed(2)}%</strong>`;
                        document.getElementById('st').innerHTML = `Scrap: 1,5% | <strong>${((st/(gt+st))*100).toFixed(2)}%</strong>`;
                        document.getElementById('sn').innerHTML = `Scrap: 1,5% | <strong>${((sn/(gn+sn))*100).toFixed(2)}%</strong>`;
                    });
                      

                    addDeleteEvent(); // Llamar al evento después de generar las filas
                });
        };

        const addDeleteEvent = () => {
            // Delegación de eventos para los enlaces "eliminar-dato"
            document.querySelectorAll('.eliminar-dato').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();


                const confirmacion = confirm("¿Estás seguro de que deseas eliminar este registro?");
                if (confirmacion) {
                    window.location.href = link.getAttribute('href');
                } else {
                                console.log("Eliminación cancelada");
                            }
                        });
                    });
                };

                cons.addEventListener('click', (e) => {
                    e.preventDefault();
                    fetchData();
                });

                fetchData();
            });

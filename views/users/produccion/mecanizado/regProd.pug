                          document.getElementById('gm').innerHTML = `Total Aprobadas: <strong>${gm}</strong>`;
                          document.getElementById('gt').innerHTML = `Total Aprobadas: <strong>${gt}</strong>`;
                          document.getElementById('gn').innerHTML = `Total Aprobadas: <strong>${gn}</strong>`
                          //OK
                          document.getElementById('om').innerHTML = `Total Programado: <strong>${om}</strong>`;
                          document.getElementById('ot').innerHTML = `Total Programado: <strong>${ot}</strong>`;
                          document.getElementById('on').innerHTML = `Total Programado:| <strong>${on}</strong>`;
                          //Scrap

                          document.getElementById('sm').innerHTML = `Scrap: 1,5% | <strong>${((sm/(gm+sm))*100).toFixed(2)}%</strong>`;
                          document.getElementById('st').innerHTML = `Scrap: 1,5% | <strong>${((st/(gt+st))*100).toFixed(2)}%</strong>`;
                          document.getElementById('sn').innerHTML = `Scrap: 1,5% | <strong>${((sn/(gn+sn))*100).toFixed(2)}%</strong>`;
                      });
                        

                      addDeleteEvent(); // Llamar al evento después de generar las filas
                  });
        };

    script.
      feather.replace({ 'aria-hidden': 'true' })
      // Variables de referencia
        const consultarBtn = document.getElementById('consultar');
        const finiInput = document.getElementById('fini');
        const ffinInput = document.getElementById('ffin');
        let chartInstance;

        // Evento para el botón consultar
        consultarBtn.addEventListener('click', () => {
            const fini = finiInput.value;
            const ffin = ffinInput.value;

            if (!fini || !ffin) {
                alert('Por favor, selecciona un rango de fechas.');
                return;
            }

            // Fetch de datos
            fetch(`/users/produccion/mecanizado/paradas_mec?fini=${fini}&ffin=${ffin}`)
                .then(response => response.json())
                .then(data => {
                    clearTableAndChart();
                    populateTable(data);
                    createChart(data);
                })
                .catch(error => console.error('Error fetching data:', error));
        });

        // Limpiar tabla y gráfico
        function clearTableAndChart() {
            // Limpiar la tabla
            const tableBody = document.getElementById('dataTableBody');
            tableBody.innerHTML = '';

            // Destruir gráfico existente si lo hay
            if (chartInstance) {
                chartInstance.destroy();
            }
        }

        // Rellenar la tabla
        function populateTable(data) {
            const tableBody = document.getElementById('dataTableBody');
            tableBody.innerHTML = '';
            data.forEach(item => {
                const row = `
                    <tr>
                        <td>${item.maquina}</td>
                        <td>${item.tp}</td>
                        <td>${item.paradas}</td>
                        <td>${item.t}</td>
                        <td>${item.disp}</td>
                    </tr>
                `;
                tableBody.innerHTML += row;
            });
        }

        // Crear el gráfico
        function createChart(data) {
            const labels = data.map(item => item.maquina);
            const disponibilidad = data.map(item => item.disp);

            const ctx = document.getElementById('lineChart').getContext('2d');
            chartInstance = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Disponibilidad',
                        data: disponibilidad,
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderWidth: 2,
                        tension: 0.3
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Disponibilidad entre Máquinas'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
        
      

        
       
      
        
      


            
    

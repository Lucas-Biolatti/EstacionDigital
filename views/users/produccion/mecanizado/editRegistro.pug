        selectSubdescripcion.innerHTML = '';

        if (descripciones.length === 0) {
          selectSubdescripcion.innerHTML = '<option value="">Sin opciones disponibles</option>';
          return;
        }

        // Agregar un option por cada descripción
        descripciones.forEach(descripcion => {
          const option = document.createElement('option');
          option.value = descripcion; // Asignar la descripción al value
          option.textContent = descripcion; // Mostrar la descripción
          selectSubdescripcion.appendChild(option);
        });
      };

      // Llamar a la función para cargar los datos
      cargarCodigosParada();
